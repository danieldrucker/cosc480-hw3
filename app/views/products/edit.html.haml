#main  
  %h2 Edit Product

  =form_for @product, :method => :patch do |f|
    %br=f.label :name
    =f.text_field :name, value: "#{@product.name}"
    %br=f.label :description
    =f.text_field :description, value: "#{@product.description}"
    %br=f.label :minimum_age_appropriate
    =f.text_field :minimum_age_appropriate, value: "#{@product.minimum_age_appropriate}"
    %br=f.label :maximum_age_appropriate
    =f.text_field :maximum_age_appropriate, value: "#{@product.maximum_age_appropriate}"
    %br=f.label :price
    =f.text_field :price, value: "#{@product.price}"
    %br=f.label :image
    =f.file_field :image
    %br=f.submit :Update

  %p= link_to "Back to product list", products_path

